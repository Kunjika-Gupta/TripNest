<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Listing Details:</h3>
  </div>
  <div class="col-6 offset-2 mt-3">
    <div class="card" style="width: 30rem">
      <img src="<%=listing.image%>" class="card-img-top" alt="listing-image" />
      <div class="card-body">
        <br />
        <h4 class="card-title"><%=listing.title%></h4>
        <br />
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377; <%=listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
        <div class="d-flex gap-3">
          <a href="/listings/<%= listing._id%>/edit" class="btn btn-primary"
            >Edit this Listing</a
          >
          <form
            action="/listings/<%= listing._id%>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger">Delete This Listing</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

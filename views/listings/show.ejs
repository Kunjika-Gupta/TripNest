<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Listing Details:</h3>
  </div>
  <div class="col-6 offset-2 mt-3">
    <div class="card listing-card" style="width: 30rem">
      <img src="<%=listing.image%>" class="card-img-top" alt="listing-image" />
      <div class="card-body">
        <br />
        <h4 class="card-title"><%=listing.title%></h4>
        <br />
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377; <%=listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
        <div class="d-flex gap-3">
          <a href="/listings/<%= listing._id%>/edit" class="btn btn-primary"
            >Edit this Listing</a
          >
          <form
            action="/listings/<%= listing._id%>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger">Delete This Listing</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="col-8 offset-2 mb-3 mt-3">
    <hr />
    <h4>Leave a review</h4>
    <form
      action="/listings/<%=listing.id%>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating:</label>
        <input
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment">Comments:</label>
        <textarea
          name="review[comment]"
          id="comment"
          class="form-control"
          rows="8"
          required
        ></textarea>
        <div class="invalid-feedback">Please add a comment!</div>
      </div>

      <button class="btn btn-dark">Submit</button>
    </form>
    <hr />
    <h4>All Reviews</h4>
    <div class="row">
      <% for (let review of listing.reviews ) { %>
      <div class="card col-6 mb-3">
        <div class="card-body">
          <h5 class="card-title">jane doe</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %></p>
          <form
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-sm btn-dark mb-3">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
